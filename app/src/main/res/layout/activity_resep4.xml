<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/masak"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resep4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="120dp"
            android:gravity="center"
            android:text="Banten"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/SateBandeng"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Sate Bandeng"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/SotoKhasBanten"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Soto Khas Banten"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/AngeunLada"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Angeun Lada"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/KetanBintul"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Ketan Bintul"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/KueCucur"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Kue Cucur"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/banten"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="#B4A2A2"
            android:text="Kembali"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textSize="15dp" />


    </LinearLayout>
</ScrollView>