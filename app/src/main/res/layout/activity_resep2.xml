<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/masak"
    tools:context=".Resep2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:text="Jawa Tengah"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="37sp"/>

        <Button
            android:id="@+id/LumpiaSemarang"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Lumpia Semarang"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/TempeMendoan"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Tempe Mendoan"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/NasiLiwet"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Nasi Liwet"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/SotoKudus"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Soto Kudus"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/NasiGandul"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Nasi Gandul"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/jawatengah"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="#B4A2A2"
            android:text="Kembali"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textSize="15dp" />

    </LinearLayout>
</ScrollView>