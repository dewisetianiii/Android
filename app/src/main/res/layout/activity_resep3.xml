<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/masak"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resep3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:text="Jawa Timur"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/GadoGado"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Gado-Gado"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/SotoLamongan"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Soto Lamongan"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/PecelLele"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Pecel Lele"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/RujakSoto"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Rujak Soto"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/SateMadura"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Sate Madura"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/jawatimur"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="#B4A2A2"
            android:text="Kembali"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textSize="15dp" />

    </LinearLayout>
</ScrollView>