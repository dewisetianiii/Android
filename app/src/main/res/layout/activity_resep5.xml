<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/masak"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resep5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            android:text="Yogyakarta"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/Gudeg"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Gudeg"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/Krecek"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Krecek"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/NasiTiwul"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="NasiTiwul"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/SayurLombokIjo"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Sayur Lombok Ijo"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/AyamGeprek"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:background="#B4A2A2"
            android:text="Ayam Geprek"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/yogyakarta"
            android:layout_width="80pt"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="#B4A2A2"
            android:text="Kembali"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="95dp"
            android:textSize="15dp" />



    </LinearLayout>
</ScrollView>